<div>
<form id="signup-form">
  <input type="text" id="firstname" name="firstname" placeholder="First Name" required autocomplete="given-name">
  <input type="text" id="lastname" name="lastname" placeholder="Last Name" required autocomplete="family-name">
  <input type="number" id="age" name="age" placeholder="Age" required autocomplete="bday-year">
  <input type="email" id="email" name="email" placeholder="Email" required autocomplete="email">
  <input type="password" id="password" name="password" placeholder="Password" required autocomplete="new-password">
  <button type="submit">Sign Up</button>
</form>
</div>

<script>
  async function signupUser() {
    const userData = {
        firstname: document.getElementById('firstname').value.trim(),
        lastname: document.getElementById('lastname').value.trim(),
        age: Number(document.getElementById('age').value),
        email: document.getElementById('email').value.trim(),
        password: document.getElementById('password').value.trim(),
    };

    console.log("Sending user data:", userData); // Debug the request

    try {
        const response = await fetch('http://localhost:3500/user/signup', {
            method: 'POST',
            headers: {
                'Accept': 'application/json',  
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(userData)
        });

        if (!response.ok) {
            throw new Error(`Signup failed: ${response.status}`);
        }

        const result = await response.json();
        console.log("Signup result:", result);
    } catch (error) {
        console.error("Fetch error:", error);
    }
}

</script>
