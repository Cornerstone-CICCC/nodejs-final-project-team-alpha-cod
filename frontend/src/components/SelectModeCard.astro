<div class="container select-mode">
    <div class="card">
        <h1>TIC PAC TOE</h1>
        <div class="row card-row">
            <!--Side navbar menu-->
            <div class="col card-col-menu">
                    <a href="/mode" id="singlePlayer">Single player</a>
                    <a href="/mode" id="multiPlayer">Multiplayer</a>
            </div>
            
            <div class="col card-col">
                <img id="playerImage" src="" class="hidden">
            </div>
        </div>
    </div>
</div>

<script>
    import gsap from 'gsap';

    const singlePlayer = document.getElementById("singlePlayer");
const multiPlayer = document.getElementById("multiPlayer");
const playerImage = document.getElementById("playerImage");

const singlePlayerImg = "/images/singlePlayer.jpg";
const multiPlayerImg = "/images/multiPlayer.jpg";

// GSAP Animation function
function showImage(imageSrc) {
    playerImage.src = imageSrc;
    playerImage.classList.remove("hidden");

    gsap.fromTo(playerImage, 
        { opacity: 0, scale: 0, rotation: -180 }, 
        { opacity: 1, scale: 1, rotation: 0, duration: 0.8, ease: "power2.out" }
    );
}

// Hover Effect
singlePlayer.addEventListener("mouseover", () => showImage(singlePlayerImg));
multiPlayer.addEventListener("mouseover", () => showImage(multiPlayerImg));

// Click Effect (to keep the image visible)
singlePlayer.addEventListener("click", () => playerImage.src = singlePlayerImg);
multiPlayer.addEventListener("click", () => playerImage.src = multiPlayerImg);


</script>